<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:text="Orginal image size: 48 x 48" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="100dp x 75dp, scaleType (default)" />

    <ImageView
      android:layout_width="100dp"
      android:layout_height="75dp"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="10dp"
      android:background="@color/yellow50"
      android:src="@drawable/android" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="100dp x 75dp, scaleType: center" />

    <ImageView
      android:layout_width="100dp"
      android:layout_height="75dp"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="10dp"
      android:background="@color/yellow50"
      android:scaleType="center"
      android:src="@drawable/android" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="100dp x 75dp, scaleType: centerCrop" />

    <ImageView
      android:layout_width="100dp"
      android:layout_height="75dp"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="10dp"
      android:background="@color/yellow50"
      android:scaleType="centerCrop"
      android:src="@drawable/android" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="100dp x 75dp, scaleType: centerInside" />

    <ImageView
      android:layout_width="100dp"
      android:layout_height="75dp"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="10dp"
      android:background="@color/yellow50"
      android:scaleType="centerInside"
      android:src="@drawable/android" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="100dp x 75dp, scaleType: fitCenter" />

    <ImageView
      android:layout_width="100dp"
      android:layout_height="75dp"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="10dp"
      android:background="@color/yellow50"
      android:scaleType="fitCenter"
      android:src="@drawable/android" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="100dp x 75dp, scaleType: fitStart" />

    <ImageView
      android:layout_width="100dp"
      android:layout_height="75dp"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="10dp"
      android:background="@color/yellow50"
      android:scaleType="fitStart"
      android:src="@drawable/android" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="100dp x 75dp, scaleType: fitEnd" />

    <ImageView
      android:layout_width="100dp"
      android:layout_height="75dp"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="10dp"
      android:background="@color/yellow50"
      android:scaleType="fitEnd"
      android:src="@drawable/android" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="100dp x 75dp, scaleType: fitXY" />

    <ImageView
      android:layout_width="100dp"
      android:layout_height="75dp"
      android:layout_marginBottom="50dp"
      android:layout_marginTop="10dp"
      android:background="@color/yellow50"
      android:scaleType="fitXY"
      android:src="@drawable/android" />

  </LinearLayout>


</ScrollView>
